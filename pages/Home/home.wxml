<!-- 首页 -->
<view>
	<view class="home_banner">
		<view>请选择玩家人数<text class="text-fz28" decode="{{true}}">&nbsp;(不包括法官)</text></view>
		<view class="text-fz24 text-999">please select the number of players</view>
		<i-panel>
			<view style="padding: 16px">
				<i-input-number value="{{ playerNum }}" min="{{minPlayers}}" max="100" bindchange="handleChange" />
			</view>
		</i-panel>
	</view>
	
	<view class="role-container">
		<i-row >
			<i-col span="8" wx:for="{{roleList}}" wx:for-item="item" wx:key>
				<view class="role-wrapper">
					<view class="badge">x{{item.Num}}</view>
					<view class="img-wrapper">
						<image  src="{{item.Photo}}"></image>
						<!-- <view class="disable">
							x
						</view> -->
					</view>
					<view class="text-fz32 text-center name">{{item.RoleName}}</view>

				</view>
			</i-col>
		</i-row>
	</view>
	<view class="home_footer">
		<view>当前已选{{playerNum}}人</view>
		<i-button type="primary" bind:click="handleClick">开始发牌</i-button>
	</view>
</view>
